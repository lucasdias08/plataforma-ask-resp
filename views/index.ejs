<!DOCTYPE html>
<html lang="pt-br">
<%- include ("partials/head.ejs") %>
<body>
    <%- include ("partials/navbar.ejs") %>

    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-info">Perguntar</a>
        <hr>
        <br>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= pergunta.title %></p>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-info">Responder</button></a>
                </div>
            </div>
            <br>
        <% }) %>
    </div>

    <%- include ("partials/footer.ejs") %>
</body>
</html>